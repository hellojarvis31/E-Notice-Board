@model fyp_V1._4.Models.Session

@{
    ViewBag.Title = "AddSession";
}

<h2>AddSession</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Session</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DegreeTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownListFor(model => model.DegreeTitle, new List<SelectListItem>
               {
                    new SelectListItem { Text = "BSCS", Value = "BSCS"},
                    new SelectListItem { Text = "MSCS", Value = "MSCS" },
                    new SelectListItem { Text = "PhD", Value = "PhD" }
               })
                @Html.ValidationMessageFor(model => model.DegreeTitle, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @*@Html.LabelFor(model => model.DegreeSession, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Session", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DegreeSession, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DegreeSession, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h3 style="color: green">

    @*@Html.Raw(ViewBag.SuccessMessag)*@
    @ViewBag.SuccessMessage
</h3>

<h3 style="color: red">
    @Html.Raw(ViewBag.ErrorMessage)
        @*@ViewBag.ErrorMessage*@
</h3>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
